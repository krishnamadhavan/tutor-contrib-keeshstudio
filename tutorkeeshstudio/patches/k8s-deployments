---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: keeshstudio
  labels:
    app.kubernetes.io/name: keeshstudio
spec:
  selector:
    matchLabels:
      app.kubernetes.io/name: keeshstudio
  template:
    metadata:
      labels:
        app.kubernetes.io/name: keeshstudio
    spec:
      securityContext:
        runAsUser: 1000
        runAsGroup: 1000
      containers:
        - name: keeshstudio
          image: {{ KEESHSTUDIO_DOCKER_IMAGE }}
          ports:
            - containerPort: 8000
          env:
            - name: DJANGO_SETTINGS_MODULE
              value: keeshstudio.settings.tutor
          volumeMounts:
            - mountPath: /app/keesh-studio/keeshstudio/settings/tutor.py
              name: settings
              subPath: tutor.py
          securityContext:
            allowPrivilegeEscalation: false
      volumes:
        - name: settings
          configMap:
            name: keeshstudio-settings
