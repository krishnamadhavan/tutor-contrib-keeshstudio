---
apiVersion: batch/v1
kind: Job
metadata:
  name: keeshstudio-job
  labels:
    app.kubernetes.io/component: job
spec:
  template:
    spec:
      restartPolicy: Never
      containers:
        - name: keeshstudio
          image: {{ KEESHSTUDIO_DOCKER_IMAGE }}
          env:
            - name: DJANGO_SETTINGS_MODULE
              value: keeshstudio.settings.tutor
          volumeMounts:
            - mountPath: /app/keesh-studio/keeshstudio/settings/tutor.py
              name: settings
              subPath: tutor.py
      volumes:
        - name: settings
          configMap:
            name: keeshstudio-settings
